<%= form_for [@topic, @post] do |f| %>
<% if post.errors.any? %>
  <div class="alert alert-danger">
    <h4>There are <%= pluralize(post.errors.count, "error") %>.</h4>
    <ul>
      <% post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      </ul>
      <% end %>
  </div>
  <% end %>
  <%= form_group_tag(post.errors[:title]) do %>
   <!-- alternate form validation - see application_helper.rb -->
   <%#= form_for [topic, post] do |f| %>
   <!-- <div class="<%#= form_group_tag(post.errors) %>"> -->
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
   <% end %>  
   <%= form_group_tag(post.errors[:body]) do %>
    <!-- //end alternate form validation -->
    <!-- </div> -->
    <!-- <div class="<%#= form_group_tag(post.errors) %>"> -->
    <%= f.label :body %>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter post body" %>
    <% end %>
    <% if post.image? %>
      <div class="form-group">
        <p>Current image</p>
        <%= image_tag( post.image.url) %>
      </div>
    <% end %> 
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
    </div> 
    <div class="form-group">
       <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
<% end %>